# Переменные окружения для VibeSplit PWA

# API конфигурация
VITE_API_URL=https://api.vibesplit.com
VITE_API_TIMEOUT=30000

# Окружение
VITE_ENVIRONMENT=production
NODE_ENV=production

# Мониторинг и аналитика
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_ANALYTICS_KEY=your-analytics-key

# PWA Push-уведомления
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# Отладка (только для разработки)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# Специфичные настройки
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=VibeSplit

# Для Docker Compose
POSTGRES_DB=vibesplit
POSTGRES_USER=vibesplit
POSTGRES_PASSWORD=your-secure-password
GRAFANA_PASSWORD=admin123

# VPS конфигурация (для CI/CD)
VPS_HOST=your-server-ip
VPS_USERNAME=deploy
VPS_PORT=22

# Staging окружение
STAGING_API_URL=https://api-staging.vibesplit.com
STAGING_VPS_HOST=staging-server-ip
STAGING_VPS_USERNAME=deploy
STAGING_VPS_PORT=22

# Уведомления
SLACK_WEBHOOK=your-slack-webhook-url